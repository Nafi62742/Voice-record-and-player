<!-- common_popup_layout.xml -->
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/cancel_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                android:src="@drawable/cancel"/>

            <TextView
                android:id="@+id/plan_popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/plan_detail_title_txt" />
            <TextView
                android:id="@+id/plan_popup_planname_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="planname" />

            <LinearLayout
                android:background="@color/appbgcolor"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/plan_popup_price_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/plan_popup_time_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:textAlignment="textStart" />
                    <TextView
                        android:id="@+id/plan_popup_size_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total_size"
                        android:textAlignment="textStart" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/Lavender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:text="@string/plan_popup_description_txt"
                    />


            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:id="@+id/plan_popup_BTN"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/Red">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:text="@string/plan_popup_decide_txt" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>